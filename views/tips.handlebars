{{#if logged_in}}
<div class="post-btn">
  <button  id="pstBtn" class="btn">Create Post</button>
  
</div>

<div id="myModal" class="modal">
  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <h2>New Post</h2>
    <textarea id="new-post-text" placeholder="Write your new post here..."></textarea>
    <input type="file" id="file-input">
    <button id="upload-button" class="upload">Upload</button>
    <button id="save-post-btn">Save</button>
  </div>
</div>

</div>
{{/if}}

<div class="row">
  {{#each tips as |tips|}}
    <div class="medium-8 large-7 columns">
      <a href="/article/{{tips.id}}">{{tips.title}}</a>
      <p>{{content}}</p>
    </div>
  {{/each}}
</div>

